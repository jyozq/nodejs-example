extends ../layout

block content
	.container
		.row
			each item in movies
				.col-md-2
					.thumbnail
						a(href="/movie/#{item._id}")
							img(src="#{item.coverImageUrl}", alt="#{item.name}")
						.caption
							h3 #{item.name}
							p: a.btn.btn-primary(href="/movie/#{item._id}",role="button")
								观看预告片